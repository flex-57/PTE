{% extends 'base.html.twig' %}

{% block title %}
	{{ atelier.nom }}
{% endblock %}

{% block body %}
	<h1 class="text-3xl font-bold mb-4 text-gray-800">Atelier :
		{{ atelier.nom }}</h1>

	<section class="mb-6">
		<h2 class="text-2xl font-semibold">Description</h2>
		<p class="mt-2 text-gray-700">{{ atelier.description|default('Aucune description disponible.') }}</p>
	</section>

	<section class="mb-6 flex items-center gap-2">
		<h2 class="text-2xl font-semibold">Domaine</h2>
		<a href="{{ path('domaine_show', {'id': atelier.domaine.id}) }}" class="inline-block mt-1 px-2 py-1 bg-green-100 text-green-800 rounded hover:bg-green-200 transition">
			{{ atelier.domaine.nom }}
		</a>
	</section>

	<section class="mb-10">
		<h2 class="text-2xl font-semibold mb-4">Critères</h2>
		{% if atelier.criteres|length > 0 %}
			<div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
				{% for ce in atelier.criteres %}
					{% set card_params = {
                        link: path('critere_show', {'id': ce.id}),
                        icon: 'fas fa-check',
                        title: ce.nom,
                        description: ce.description|default(''),
                        badges: [
                            {'name':'Critère', 'count': ce.ateliers|length},
                        ],
                        color: '#2b7c6e',
                    } %}
					{% include '_includes/_card.html.twig' with card_params %}
				{% endfor %}
			</div>
		{% else %}
			<p class="text-gray-500">Aucun critère disponible.</p>
		{% endif %}
	</section>
{% endblock %}
