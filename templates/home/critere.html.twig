{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }} :: {{ critere.nom }}
{% endblock %}

{% block body %}
	<h1 class="text-3xl font-bold mb-4 text-gray-800">Critère :
		{{ critere.nom }}
	</h1>
	<section class="mb-6">
		<h2 class="text-2xl font-semibold">Description</h2>
		<p class="mt-2 text-gray-700">{{ critere.description|default('') }}</p>
	</section>

	<section class="mb-10">
		<h2 class="text-2xl font-semibold mb-4">Métiers associés</h2>
		{% if critere.metiers|length > 0 %}
			<div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
				{% for m in critere.metiers %}
					{% set card_params = {
                        link: path('metier_show', {'id': m.id}),
                        icon: 'fas fa-list',
                        title: m.nom,
                        description: m.description|default(''),
                        badges: [
                            {'name':'Critère', 'count': m.criteres|length},
                        ],
                        color: '#2b7c64',
                    } %}
					{% include '_includes/_card.html.twig' with card_params %}
				{% endfor %}
			</div>
		{% else %}
			<p class="text-gray-500">Aucun critère de métier disponible.</p>
		{% endif %}
	</section>
{% endblock %}
